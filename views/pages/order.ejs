<% include ../partials/head %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


<body class="grey lighten-3">
    <% include ../partials/nav %>
    <div class="container">
        <% include ../partials/dashboard_sidebar %>
        
        <% if (results=="") { %>
            <div class="collection">
                    <a href="/store" class="collection-item">Opps! your shipping cart is empty, go to add something</a>
            </div>
        <% }else{ %>
            <div class="card">
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">Order History</span>
                    <table class="responsive-table">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Item Price</th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </thead>
            
                        <tbody>
                            <% for(var i=0; i<results.length; i++) { %>
                                <tr>
                                    <td><%= results[i].name %></td>
                                    <td><%= results[i].price %></td>
                                    <td><%= results[i].qty %></td>
                                    <td><a class="waves-effect waves-light red btn-small" href="#">View</a></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </div>

    <div style="height: 200px;"></div>
    <div style="height: 200px;"></div>
    <% include ../partials/footer %>
</body>
</html>