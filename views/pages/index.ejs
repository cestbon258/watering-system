<!DOCTYPE html>
<html lang="en">
<% include ../partials/head %>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<body>
    <% include ../partials/nav %>
    <div class="container right-align"><div id="MyClockDisplay" class="clock" onload="showTime()"></div></div><br>

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s3"><a href="#test1">MOISTURE</a></li>
                <li class="tab col s3"><a href="#test2">HUMIDITY</a></li>
                <li class="tab col s3"><a href="#test3">TEMPERATURE</a></li>
                <li class="tab col s3"><a href="#test4">CHARTS</a></li>
            </ul>
        </div>
        <div id="test1" class="col s12">           
            <!--  chart  -->
            <div id="chart"></div>
        </div>
        <div id="test2" class="col s12">Test 2</div>
        <div id="test3" class="col s12">Test 3</div>
        <div id="test4" class="col s12">Test 4</div>
    </div>



    <% include ../partials/footer %>
    


    <style>
        #chart {
            max-width: 650px;
            margin: 35px auto;
        }

        .clock {
            /* position: absolute; */
            /* right: 6%; */
            /* transform: translateX(-50%) translateY(-50%); */
            color: rgb(8, 8, 8);
            font-size: 16px;
            font-size: 4vw;
            letter-spacing: 2px;
        }
    </style>
    <script>
        $(document).ready(function(){
            //vars
            var moisData = 0;

            // tabs
            $('.tabs').tabs();

            // hide chats
            $('#chart').hide();

            // chart
            var options = {
                chart: {
                    type: 'line'
                },
                series: [{
                    name: 'Humidity',
                    data: [0]
                }],
                xaxis: {
                    labels: {
                        show: false,
                    }
                    // categories: [],
                    // labels: {
                    //     formatter: function (value, timestamp) {
                    //         return new Date().getSeconds(); // The formatter function overrides format property
                    //     },
                    // }
                },
                // labels: ['Apples', 'Oranges', 'Berries', 'Grapes', 'Banana', "abc"],
            }
            var chart = new ApexCharts(document.querySelector("#chart"), options);
            chart.render();

            // clock
            function showTime(){
                var date = new Date();
                var h = date.getHours(); // 0 - 23
                var m = date.getMinutes(); // 0 - 59
                var s = date.getSeconds(); // 0 - 59
                var session = "AM";
                
                if(h == 0){
                    h = 12;
                }
                
                if(h > 12){
                    h = h - 12;
                    session = "PM";
                }
                
                h = (h < 10) ? "0" + h : h;
                m = (m < 10) ? "0" + m : m;
                s = (s < 10) ? "0" + s : s;
                
                var time = h + ":" + m + ":" + s + " " + session;
                document.getElementById("MyClockDisplay").innerText = time;
                document.getElementById("MyClockDisplay").textContent = time;
                
                setTimeout(showTime, 1000);
                
            }
            showTime();

            var moisArray = [];
            function pollData(firstTime = false) {
                $.ajax({
                    url:'/poll-chart-data',
                    type:'get',
                    // dataType : "json",
                    success:function(result){
                        if (firstTime) {
                            $('#chart').show();
                        }
                        var data = result;
                        console.log(data['results']);
                        for (var key in data['results']) {
                            moisData = data['results'][0]['mois'];
                            moisArray.push(moisData);
                        } 
                        console.log(moisArray);
                        // chart.updateSeries([{
                        //     data: moisArray
                        // }])
                        chart.appendData([{
                            data: moisArray
                        }])
                        console.log("polling ...");
                    },
                    error:function(err){
                        console.log(err);
                    }
                });
                moisArray = []
            }
            pollData(true);
            setInterval(function(){ pollData(); }, 3000);

        });
    </script>
</body>
</html>
