
<% include ../partials/head %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="qrcode_js/qrcode.js"></script>


<body class="grey lighten-3">
    
    <div class="container">
                    
        <div class="col s12">
            <div class="card">
                <center><a href="/"><img src="favicon_io/android-chrome-192x192.png"></a></center>
                <form action="/user-login" method="POST">
                    <div class="card-content">
                        <div class="row" id="account">
                            <div class="col s12">
                                <div class="row">
                                    <div class="col s12">
                                        <label for="email">Email:</label>
                                        <input id="email" name="email" type="email">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        <label for="password">Password:</label>
                                        <input id="Password" name="password" type="password">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <center><div id="qrcode"></div></center>
                    </div>
                    <div class="divider"></div>
                    <center><div><a class="waves-effect waves-light btn-small" id="qrcode-tab">Login Using QR Code</a><a class="waves-effect waves-light btn-small" id="account-tab">Login Using Account</a></div></center>
                    <div class="card-action">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Login
                            <i class="material-icons right">send</i>
                        </button>
                        <span>or <a href="/signup">Create an account</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <style>
       
    </style>
   
    <script type="text/javascript">
        $('#account-tab').hide();
        $('#qrcode').hide();

        $('#qrcode-tab').click(function(){
            $(this).hide();
            $('#account').hide();
            $('#account-tab').show();
            $('#qrcode').show();
        })

        $('#account-tab').click(function(){
            $(this).hide();
            $('#qrcode').hide();
            $('#qrcode-tab').show();
            $('#account').show();
        })

        var base_url = window.location.origin;
        var qrcode = new QRCode(document.getElementById("qrcode"), {
            text: base_url +"/user-login",
            width: 208,
            height: 208,
            colorDark : "#000000",
            colorLight : "#ffffff",
            correctLevel : QRCode.CorrectLevel.H
        });
    </script>

</body>
</html>
